<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardCornerRadius="2dp"
    android:elevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:id="@+id/student_img"
            android:src="@drawable/ic_person"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/student_name_att"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student Name"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:layout_below="@+id/student_name_att"
                android:id="@+id/txt_id_att"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student ID"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/wrong_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txt_id_att"
                android:src="@drawable/ic_wrong"/>

            <ImageView
                android:layout_marginRight="10dp"
                android:id="@+id/true_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_toLeftOf="@+id/wrong_btn"
                android:layout_below="@+id/txt_id_att"
                android:src="@drawable/ic_true"/>




        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>